<div style="background-image: url(<%= asset_path "" %>); background-size: 200px;">
  <div class="container">
  <%= cl_image_tag("weozl0pys30ldlfdtqf6", cloud_name: "djwmjh3zt", width: 400, height: 300, crop: :limit) %>

      <div class="d-flex justify-content-between align-items-center mb-4">
          <h1 class="mb-0">Simple List</h1>
          <%= link_to 'Add a List', new_list_path, class: 'btn btn-primary' %>
      </div>
        <div class="row">
          <% @lists.each do |list| %>
                <div class="col-md-4">
                    <div class="card mb-4 equal-height" style="background-image: url(<%= asset_path "cinema#{rand(1..4)}.jpg" %>); min-height: 200px;">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title"><%= list.name %></h5>
                            <div class="mt-auto">
                                <a href="<%= list_path(list) %>" class="btn btn-primary">More info</a>
                                <a href="<%= new_list_bookmark_path(list) %>" class="btn btn-primary">Add movie</a>
                            </div>
                        </div>
                    </div>
                </div>
          <% end %>
        </div>
    </div>
</div>
